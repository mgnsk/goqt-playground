# This is the .envrc file. It is only loaded on the host machine which the docker daemon is running on.

export GOPATH=$PWD/.go

# Just in case, some tools may want to use GOBIN (when installing vscode tools probably).
export GOBIN=$GOPATH/bin

# Temporary hack to disable cgo in vscode with direnv plugin. For precompiled QT and tooling attach into the deply_linux container.
export CGO_ENABLED=0

# wasmbrowsertest uses the $GOROOT from env (TODO verify).
export GOROOT=$(go env GOROOT)

export GOOS=linux
export GOARCH=amd64

export GO111MODULE=on

export REPO=$PWD

PATH_add "$PWD/.go/bin"
PATH_add "$PWD/bin"
